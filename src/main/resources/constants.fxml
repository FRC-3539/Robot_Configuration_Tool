<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns:fx="http://javafx.com/fxml/1" fx:controller="robot.configuration.controllers.ConstantsController"
            prefHeight="700">
    <top>
        <MenuBar fx:id="menuBar">
            <menus>
                <Menu text="File">
                    <MenuItem fx:id="settingsMenuItem" text="Settings" />
                    <MenuItem fx:id="newFileMenuItem" text="New File" accelerator="Ctrl+N" />
                    <MenuItem fx:id="saveAllFilesMenuItem" text="Save All" accelerator="Ctrl+Shift+S" />
                    <MenuItem fx:id="saveFileMenuItem" text="Save" accelerator="Ctrl+S" />
                </Menu>
            </menus>
        </MenuBar>
    </top>
    <left>
        <VBox spacing="10" alignment="center" style="-fx-padding: 10 0 10 10;">
            <TableView fx:id="filesTableView" prefWidth="300" VBox.vgrow="ALWAYS">
                <columns>
                    <TableColumn fx:id="fileNameColumn" text="Files" />
                    <TableColumn fx:id="lastModifiedColumn" text="Last Modified" />
                </columns>
            </TableView>
            <HBox spacing="5" alignment="center_left">
                <Button fx:id="uploadButton" text="⭱" prefWidth="32">
                    <tooltip>
                        <Tooltip text="Upload to robot"/>
                    </tooltip>
                </Button>
                <Button fx:id="downloadButton" text="⭳" prefWidth="32">
                    <tooltip>
                        <Tooltip text="Sync from robot"/>
                    </tooltip>
                </Button>
                <TextField fx:id="searchField" promptText="Search" HBox.hgrow="ALWAYS"/>
            </HBox>
        </VBox>
    </left>
    <center>
        <VBox spacing="10" alignment="center" style="-fx-padding: 10;">
            <TableView fx:id="constantsTableView" VBox.vgrow="ALWAYS">
                <columns>
                    <TableColumn fx:id="nameColumn" text="Name" />
                    <TableColumn fx:id="typeColumn" text="Type" />
                    <TableColumn fx:id="valueColumn" text="Value" />
                    <TableColumn fx:id="descriptionColumn" text="Description" />
                </columns>
            </TableView>
            <HBox spacing="10" alignment="center">
                <TextField fx:id="nameField" promptText="Name" />
                <ComboBox fx:id="typeComboBox" promptText="Type" prefWidth="120" />
                <StackPane HBox.hgrow="ALWAYS">
                    <TextField fx:id="valueField" promptText="Value" />
                    <CheckBox fx:id="booleanSwitch" text="True/False" visible="false" />
                </StackPane>
                <TextField fx:id="descriptionField" promptText="Description" HBox.hgrow="ALWAYS" />
                <Button text="Add" fx:id="addConstantButton" />
            </HBox>
        </VBox>
    </center>
</BorderPane>
